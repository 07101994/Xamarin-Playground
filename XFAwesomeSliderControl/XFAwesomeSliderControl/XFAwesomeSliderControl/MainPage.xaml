<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XFAwesomeSliderControl"
             x:Class="XFAwesomeSliderControl.MainPage">

  <StackLayout Padding="10,20,10,20"
             Spacing="25"
             VerticalOptions="Center"
             HorizontalOptions="Center">

    <Label Text="Welcome to decorating Xamarin Forms Slider in Android..." HorizontalTextAlignment="Center" FontSize="22" />

    <Slider HeightRequest="25" WidthRequest="350" HorizontalOptions="Center"
            Minimum="0" Maximum="100" />

    <local:AwesomeSlider HeightRequest="25" WidthRequest="350"  HorizontalOptions="Center"
        Minimum="0" Maximum="100" />

  </StackLayout>
    
</ContentPage>